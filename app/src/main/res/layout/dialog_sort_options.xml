<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_by"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp" />

    <!-- Order Toggle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@+id/btnDesc"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAsc"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sort_ascending" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDesc"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sort_descending" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Criteria List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criteria"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/radioGroupCriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_recently_created"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <RadioButton
            android:id="@+id/radioTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_time"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <RadioButton
            android:id="@+id/radioDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_start_date"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <RadioButton
            android:id="@+id/radioEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_enabled"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>
    </RadioGroup>

</LinearLayout>
